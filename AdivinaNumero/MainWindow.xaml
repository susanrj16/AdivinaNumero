<Window x:Class="AdivinaNumero.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdivinaNumero"
        mc:Ignorable="d"
        Title="Adivina el número" Height="200" Width="700" Icon="128.ico">
    <Grid>
        <TextBlock Text="¿Qué número has pensado?" Margin="10,10,-40,10"/>
        <TextBox x:Name="numTextBox" Height="23" Width="150" VerticalAlignment="Top" Margin="10,10,120,10"/>
        <TextBlock x:Name="fraseTextBox" HorizontalAlignment="Right" Margin="0,10,80,10"/>
        <Button x:Name="comprobarButton" Content="Comprobar" Height="23" Width="120" HorizontalAlignment="Left" Margin="10,30,-40,10" Click="comprobarButton_Click"/>
        <Button x:Name="reiniciarButton" Content="Reiniciar" Height="23" Width="120" Margin="10,30,150,10" Click="reiniciarButton_Click"/>
    </Grid>
</Window>
